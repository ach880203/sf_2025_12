package org.zerock.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.zerock.service.HelloService;

import lombok.AllArgsConstructor;
import lombok.NoArgsConstructor;
import lombok.RequiredArgsConstructor;
import lombok.ToString;
import lombok.extern.log4j.Log4j2;

@Controller
@ToString
@Log4j2
@RequiredArgsConstructor
@RequestMapping("/sample")
public class HelloController {
	
	
	private final HelloService helloService;
	
    /*
     * String : /WEB-INF/views/ex3.jsp
     * String : /WEB-INF/views/board/ex4.jsp
     * 
     * void : /WEB-INF/views/sample/ex1.jsp
     * void : /WEB-INF/views/sample/ex2.jsp
     * 
     */
	
	//localhost:8080/sample/ex1 -> 	* void : /WEB-INF/views/sample/ex1.jsp 이렇게 경로를 찾아간다
	@GetMapping("/ex1")
	public void ex1() {
		log.info("/sample/ex1");
	}
	
	//localhost:8080/sample/ex2 -> 	* void : /WEB-INF/views/sample/ex2.jsp 이렇게 경로를 찾아간다
	@GetMapping("/ex2")
	public String ex2() {
		log.info("/sample/success");
		return "/sample/success";
	}
	
	/*
	 * //localhost:8080/sample/ex3 -> * String : /WEB-INF/views/ex3.jsp 이렇게 경로를 찾아간다
	 * 
	 * @GetMapping("/ex3") public String ex3() { return "ex3"; }
	 * 
	 * //localhost:8080/sample/ex4 -> * String : /WEB-INF/views/board/ex4.jsp 이렇게
	 * 경로를 찾아간다
	 * 
	 * @GetMapping("/ex4") public String ex4() { return "board/ex3"; }
	 */
	
	/*
	 * @Autowired private HelloService helloService;
	 * 
	 * public HelloController(HelloService helloService) { this.helloService =
	 * helloService;
	 * 
	 * }
	 */

}
