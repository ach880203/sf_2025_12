package org.zerock.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.zerock.dto.SampleDTO;
import org.zerock.service.HelloService;

import lombok.AllArgsConstructor;
import lombok.NoArgsConstructor;
import lombok.RequiredArgsConstructor;
import lombok.ToString;
import lombok.extern.log4j.Log4j2;

@Controller
@ToString
@Log4j2
@RequiredArgsConstructor
@RequestMapping("/sample")
public class HelloController {

	private final HelloService helloService;



	// http://localhost:8080/sample/ex1 -> void -> WEB-INF/sample/ex1.jsp
	@GetMapping("/ex1")
	public void ex1() {
		log.info("/sample/ex1");
	}

	// http://localhost:8080/sample/ex2 -> String -> WEB-INF/sample/success.jsp
	// 찾아간다
	@GetMapping("/ex2")
	public String ex2() {
		log.info("/sample/success");
		return "/sample/success";
	}

	
	 //http://localhost:8080/sample/ex3 -> String -> WEB-INF/sample/ex3re
	 @GetMapping("/ex3") 
	 public String ex3() { 
		 return "redirect:/sample/ex3re"; 
		 }
	//http://localhost:8080/sample/ex3re -> String -> WEB-INf/sample/ex3Result.jsp
	 @GetMapping("/ex3re") 
	 public String ex3Re() { 
		 return "/sample/ex3Result"; 
	 }
	
	 //http://localhost:8080/sample/ex4?name=홍길동
	 //http://localhost:8080/sample/ex4?n1=7&name=홍길동
	 //  ---> void -> WEB-INF/sample/ex4.jsp
	 @GetMapping("/ex4") 
	 public void ex4(@RequestParam(name="n1", defaultValue = "1") int num,
			          @RequestParam("name") String name) {
	 
	 	log.info("num : " + num);
	 	log.info("name : " + name);
	 }
	 
	 //http://localhost:8080/sample/ex5?name=홍길동&age=20 -> void -> WEB-INF/sample/ex5.jsp
	 @GetMapping("/ex5")
	 	public void ex5(SampleDTO dto) {
		 log.info(dto);
	 }
	 
	//http://localhost:8080/sample/ex6
	 @GetMapping("/ex6")
	 public void ex6(Model model) {
		 model.addAttribute("name", "Hong gildong");
		 model.addAttribute("age", "16");
	 }
	 
		/*
		 * @Autowired private HelloService helloService;
		 * 
		 * public HelloController(HelloService helloService) { this.helloService =
		 * helloService;
		 * 
		 * }
		 */
}


